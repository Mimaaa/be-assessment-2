<html lang="nl">
<%- include('head.ejs') %>

  <body>
    <%- include('nav.ejs') %>
      <main>
        <form action="/edit/<%= data.id %>" method="POST" enctype="multipart/form-data">
          <label> Naam *
            <input type="text" name="naam" value="<%= data.naam %>" placeholder="Vul hier je naam in" required>
          </label>

          <fieldset>
            <legend>Geslacht *</legend>
            <div>
              <label>
                <input type="radio" name="geslacht" value="<%= data.geslacht %>" required> Man
              </label>
              <label>
                <input type="radio" name="geslacht" value="<%= data.geslacht %>" required> Vrouw
              </label>
            </div>
          </fieldset>

          <label> Geboortedatum*
            <input type="date" name="geboortedatum" value="<%= data.geboortedatum %>">
          </label>

          <label> Lichaamsgewicht *
            <input type="text" name="lichaamsgewicht" value="<%= data.lichaamsgewicht %>" placeholder="Vul hier je lichaamsgewicht in" required>
          </label>

          <!-- <label> Avatar *
            <input type="file" name="image" accept="image/jpeg" required>
          </label> -->

          <button type="submit" value="AANPASSEN">AANPASSEN</button>
        </form>
      </main>
      <%- include('tail.ejs') %>
  </body>

</html>
